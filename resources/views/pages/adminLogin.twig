{% include 'layouts/header.twig' %}


<div class="container mt-5 w-50">
    <div class="card w-75 p-4 mx-auto mt-5">
        <h4 class="text-center">Admin Auth</h4>
        {% if(logged) %}
            {% include '/layouts/login.twig' %}
        {% else %}
            <div class="my-5 mx-auto text-center d-flex flex-column">
                <span>You are logged in as <span class="font-weight-bold">{{ name }}</span></span>
                <button class="btn btn-light mt-3" id="logout">Logout</button>
            </div>
        {% endif %}
    </div>
</div>
