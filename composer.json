{
  "description": "A Slim Framework / Twig application ",
  "keywords": [
    "microframework",
    "rest",
    "router",
    "psr7"
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-random": "*",
    "akrabat/ip-address-middleware": "^2.1",
    "monolog/monolog": "^2.8",
    "php-di/php-di": "^6.4",
    "phpmailer/phpmailer": "^6.6",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.10",
    "slim/twig-view": "^3.3",
    "twig/twig": "^3.4",
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "jangregor/phpstan-prophecy": "^1.0.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.1.0"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public"
  }
}
